	.section-img
		display block
		width 100%

	.section-holder
		position relative
		display block

	.section-title
		text-align right

		.section-title-item
			display inline-block
			margin-top 8px
			line-height 25px

			writing-mode tb-rl
			transform rotate(180deg)

