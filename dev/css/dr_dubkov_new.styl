/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
$colorDark = #4a4a4a
$colorLight = #f7f7f7
$colorSend = #b59e4f

/* fonts */
@font-face
	font-family "Circe"
	src url("../fonts/Circe.woff") format("woff")

@font-face
	font-family "ProximaNovaRegular"
	src url("../fonts/ProximaNova-Regular.woff") format("woff")

@font-face
	font-family "ProximaNovaBold"
	src url("../fonts/ProximaNova-Bold.woff") format("woff")

@font-face
	font-family "ProximaNovaLight"
	src url("../fonts/ProximaNova-Light.woff") format("woff")

@font-face
	font-family "ProximaNovaSemibold"
	src url("../fonts/ProximaNova-Semibold.woff") format("woff")
/* //fonts */

html
	height 100%

body
	position relative
	width 100%
	height 100%
	line-height 1
	cursor default
	font-family "ProximaNovaRegular"
	color $colorDark

/*** //Settings ***/

/*** main style ***/

.page
	position relative
	display flex
	justify-content space-between
	align-items flex-start
	width 100%
	height 100%

	margin 0 auto

	overflow hidden

.page-inner
	position relative
	display block
	margin 0 auto
	box-sizing border-box

	&--w1
		max-width 1080px
		width 100%

	&--w2
		max-width 720px
		width 100%

.page-header
	position fixed
	top 0
	left 0
	bottom 0
	display block
	width 120px
	height 100%

	background $colorLight

	transform translateX(-100%)
	transition transform 1.5s $transitionAnimation

	z-index 12000

	.page-header-inner
		position relative
		width 100%
		height 100%

		text-align center

	.header-title
		position absolute
		top 40px
		right 40%
		display inline-block
		width 20px
		white-space nowrap

		.header-title-icon
			display block
			width 100%
			height 100%

			svg
				display block
				width 100%

	.header-burger-holder
		position absolute
		top 50%
		left 50%

		display inline-block
		width 35px
		height 20px

		margin-left -17.5px
		margin-top -10px

		cursor pointer

		transition transform 0.3s $transitionAnimation

		.header-burger
			position absolute
			top 50%
			display block
			width 100%
			height 2px
			background #000
			transform translateY(-50%)
			transition width 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		&:before
		&:after
			content ""
			position absolute
			top 0
			left 0
			display block
			width 100%
			height 2px
			background #000
			transition transform 0.3s $transitionAnimation, width 0.3s $transitionAnimation

		&:after
			top initial
			bottom 0

		&.active
			transform rotate(180deg)

			.header-burger
				transform scale(0.7) translateX(7px) translateY(-1.5px)

			&:before
				width 45%
				transform rotate(35deg) translateX(18px) translateY(-8px)

			&:after
				width 45%
				transform rotate(-35deg) translateX(19px) translateY(8px)

	.header-record
		position absolute
		bottom 50px
		right 50%
		display inline-block

		transform rotate(-90deg)
		transform-origin 52% -260%

		white-space nowrap

		font-size 16px

	&.active
		transform translateX(0)

.page-content
	position relative
	display block
	width 100%
	height 100%

	padding-left 120px
	box-sizing border-box

	transition transform 0.8s $transitionAnimation

	.page-content-block
		height 100%
		transition transform 1s $transitionAnimation, background 1s $transitionAnimation

		&:after
			content ""
			position absolute
			top 0
			right 0
			left 0
			bottom 0

			display block
			width 100%
			height 100%

			transition background 2s $transitionAnimation

			z-index -10

	.page-content-holder
		overflow-y scroll
		opacity 0
		height 100%
		transform scale(0.95)
		transition transform 1s $transitionAnimation, opacity 1s $transitionAnimation

	&:after
		content ""
		position absolute
		top 0
		right 0
		left 0
		bottom 0

		display block
		width 100%
		height 100%

		background $colorLight

		transition transform 2s $transitionAnimation

		z-index 10

	&.active
		&:after
			transform translateX(150%)

		.page-content-holder
			opacity 1
			transition-delay 1s
			transform scale(1)

	.page-mobile
		position absolute
		top 40px
		right 40px

		font-size 22px
		font-family "Circe"

/** button and link **/

.page-menu
	position fixed
	top 0
	left 120px
	bottom 0

	width 50vw
	height 100%

	padding-left 120px
	box-sizing border-box

	background #fff

	opacity 0

	transform translate3d(-150%, 0, 0)

	z-index 100

	transition transform 1s $transitionAnimation, opacity 0.5s $transitionAnimation

	.menu
		position absolute
		top 50%

		display block
		margin-bottom 30px

		transform translateY(-50%)

		.menu-item-holder
			display block
			margin-bottom 20px
			font-size 32px

			opacity 0
			transition opacity 0.8s $transitionAnimation

			&:last-child
				margin-bottom 0

			.menu-item
				&.active
					color $colorSend

	.page-menu-info
		position absolute
		bottom 50px

		transform translateY(10px);
		opacity 0
		transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		.page-menu-address
			display block
			margin-bottom 20px
			font-size 16px

		.page-menu-creators
			font-family "ProximaNovaLight"
			font-size 16px

			.footer-creators-name
				border-bottom 1px solid transparent
				transition border-bottom-color 0.3s $transitionAnimation, color 0.3s $transitionAnimation

			&:hover
				.footer-creators-name
					color $colorSend
					border-bottom 1px solid $colorSend

	.close-menu
		position absolute
		top 50px
		right 100px

		display block
		width 30px
		height 30px

		opacity 0

		svg
			display block
			width 100%
			transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

			&:hover
				transform rotate(-90deg)
				opacity 0.5

body.open-menu
	.page-menu
		opacity 1
		transform translate3d(0, 0, 0)

	.menu
		.menu-item-holder
			opacity 1
			transition-delay 1s

	.close-menu
		opacity 1
		transition-delay 1s

	.page-menu-info
		opacity 1
		transition-delay 1s
		transform translateY(0)

	.page
		overflow hidden

	.page-content
		transform translate3d(50vw, 0, 0)

		.page-content-holder

		.page-content-block
			&:after
				z-index 10
				background rgba(#000000, 0.7)


.link
	text-decoration none
	color #000

.link-bold
	font-weight bold

.link-send
	color $colorSend

.link-dark
	color $colorDark

.link-white
	color #fff

.link-opacity
	transition opacity 0.3s $transitionAnimation
	&:hover
		opacity 0.5

.link-dark--bottom
	position relative
	display inline

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorDark

		opacity 1

		transform translateY(0px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)

.link-dark--bottom-reverse
	position relative
	display inline

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorDark

		opacity 0

		transform translateY(5px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 1
			transform translateY(0px)


.link-send--bottom
	position relative
	display inline

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorSend

		opacity 1

		transform translateY(0px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)


.link-send--bottom-reverse
	position relative
	display inline

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorSend

		opacity 0

		transform translateY(5px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 1
			transform translateY(0px)

.link-opacity
	transition opacity 0.3s $transitionAnimation

	&:hover
		opacity 0.6px

.link-dark--color
	transition color 0.3s $transitionAnimation

	&:hover
		color $colorSend


.button
	position relative
	display block
	padding 20px
	box-sizing border-box
	text-align center

.button-dark
	width 100%
	max-width 250px
	color #fff
	color $colorgreen
	background #000
	border 1px solid #000

	transition color 0.3s $transitionAnimation, border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation

	overflow hidden

	font-size 16px
	font-family "ProximaNovaRegular"

	&:hover
		background #fff
		color #000
/** form **/
.form-popup
	max-width 70%
	width 100%

.form
	width 100%

	.form-row
		display flex
		justify-content space-between
		margin-bottom 67px

		.form-holder
			position relative

			label.error
				position absolute
				left 0
				bottom -15px
				color red
				font-size 14px

		&--w1
			.form-holder
				width 100%
		&--w2
			.form-holder
				width 48%

		.form-item
			width 100%

		.form-item--text
		.form-item--textarea
			position relative
			width 100%
			padding 15px 0
			box-sizing border-box
			box-shadow inset 0 -2.9555px #fff, inset 0 -4px #979797;
			font-size 18px

			color $colorDark

			font-family "ProximaNovaRegular"

			transition box-shadow 0.3s $transitionAnimation

		.form-item--text
		.form-item--textarea
			&::-webkit-input-placeholder
				font-family "ProximaNovaRegular"
				transition: transform 0.3s $transitionAnimation, font-size 0.3s $transitionAnimation

			&:-moz-placeholder
				font-family "ProximaNovaRegular"
				transition: transform 0.3s $transitionAnimation, font-size 0.3s $transitionAnimation

		.form-item--text
		.form-item--textarea
			&:focus
				box-shadow inset 0 -2.9555px #fff, inset 0 -5px #979797

				&::-webkit-input-placeholder
					transform translateY(-20px)
					font-size 11px

				&:-moz-placeholder
					transform translateY(-20px)
					font-size 11px

			&:hover
				border-bottom-color #000

		.form-item--textarea
			resize none

			&before
				content ""

		.form-label
			.jcf-checkbox
				position relative
				display inline-block
				width 30px
				height 30px
				vertical-align middle
				border 1px solid #979797
				margin-right 10px

				label.error
					position absolute
					top 105%
					left 0
					color red
					white-space nowrap

				span
					position: absolute
					top 5.4px
					left 4.9px
					display block
					width 20px
					height 20px
					background #979797
					transform scale(0.5)
					opacity 0
					transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

				&.jcf-checked
					span
						opacity 1
						transform translateY(0)


.jcf-select-find-result-select
	position relative;
	display inline-block
	width 100%
	padding 16px 0 16px 0
	box-sizing border-box
	background #fff
	border-bottom 1px solid #979797
	cursor pointer

	.jcf-drop-active
		border-bottom none
		border-radius 21px 21px 0 0

	.jcf-select-opener
		position absolute
		right 15px
		top 18px
		width 20px
		height 10px
		transition transform 0.3s $transitionAnimation

		&:before
			content ""
			position absolute
			top 0
			left 0
			display block
			width 100%
			height 100%
			background-size contain
			background-repeat no-repeat
			transition opacity 0.3s $transitionAnimation

		&:before
			opacity 1
			background-image url("../svg/black_arrow_bottom.svg")

	&.jcf-drop-active
		.jcf-select-opener
			transform rotate(180deg)

.jcf-select-drop
	&.jcf-select-find-result-select
		display block
		padding 20px 0
		box-sizing border-box
		background #fff
		border-bottom 1px solid #979797
		z-index 10000

		.jcf-list-content
			li
				cursor pointer
				margin-bottom 20px

				&:first-child
					display none

				.jcf-option
					transition 0.3s color $transitionAnimation

					&:hover
						color $colorSend

					&.jcf-option-disabled
						display: none

				&:last-child
					margin-bottom 0

/** general **/
.page-text
	h1
		font-size 56px
		line-height 64px
		color $colorDark

	h2
		font-size 26px
		line-height 44px
		margin-bottom 30px

	p
		font-size 18px
		line-height 28px
		margin-bottom 40px

		&:last-child
			margin-bottom 0
	img
		display block
		width 100%

	.center
		text-align center

	dl
		position relative
		margin-top 60px
		margin-bottom 55px
		overflow hidden

		dt
			width 48%
			float left
			margin-right 4%
			margin-bottom 30px

			line-height 28px

			font-family "HarmoniaSansProCyrBold"
			font-size 18px

			color #4f4f4f

		dd
			width 48%
			float left
			margin-bottom 30px

			line-height 28px

			font-size 18px
			color #4c4c4c

	ul
		display block
		margin-bottom 30px

		li
			position relative
			display block
			padding-left 40px
			box-sizing border-box
